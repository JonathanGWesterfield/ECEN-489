<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Memories">

	<android.support.constraint.Guideline
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" app:layout_constraintGuide_begin="485dp" android:id="@+id/guideline"/>
	<fragment
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:name="com.memoryboi.jonathanwesterfield.memoryboi.MemoryList"
			android:id="@+id/memoryListFrag" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline"
			android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
	<fragment
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:name="com.memoryboi.jonathanwesterfield.memoryboi.CameraButton"
			android:id="@+id/cameraBtnFrag" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>